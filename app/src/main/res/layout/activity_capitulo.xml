<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ep4.carla.survivethealiens.CapituloActivity">

    <TextView
        android:id="@+id/textViewHistoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="História"
        />

    <LinearLayout
        android:id="@+id/buttonCapitulos"
        android:layout_below="@+id/textViewHistoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/buttonCap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cap 1"
            />

        <Button
            android:id="@+id/buttonCap2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cap 2"
            />

        <Button
            android:id="@+id/buttonCap3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cap 3"
            />
    </LinearLayout>

    <Button
        android:id="@+id/buttonMissao1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fuga Alucinada"
        android:layout_below="@id/buttonCapitulos"
        />

    <Button
        android:id="@+id/buttonMissao2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encontrando Ajuda"
        android:layout_below="@id/buttonMissao1"
        />

    <Button
        android:id="@+id/buttonMissao3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cidade Pegando Fogo"
        android:layout_below="@id/buttonMissao2"
        />

    <Button
        android:id="@+id/buttonMissao4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pântano da Morte"
        android:layout_below="@id/buttonMissao3"
        />
</RelativeLayout>
